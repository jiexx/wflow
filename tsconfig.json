{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
   /*  "downlevelIteration": true, */
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom", /* "dom.iterable" */
    ],
    "paths": {
      "config/*": ["../config/*"],
      "workflow/*": ["../workflow/*"],
    },
  },
}
